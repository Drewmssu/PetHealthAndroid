<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tipsCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:cardElevation="@dimen/default_margin"
    app:cardCornerRadius="4dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_margin">

        <ImageView
            android:id="@+id/tipImageView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="@dimen/default_margin"
            android:scaleType="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tipTittleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tittle"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/tipImageView"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tipDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/colorSecondaryText"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/tipTittleTextView"
            app:layout_constraintStart_toStartOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>