<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/minimun_margin"
    app:cardElevation="@dimen/default_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.androidnetworking.widget.ANImageView
            android:id="@+id/vetANImageView"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="center"
            android:layout_margin="@dimen/minimun_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VetName"
            android:textStyle="bold"
            android:layout_margin="@dimen/minimun_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/vetANImageView"/>
        <RatingBar
            android:id="@+id/rateRatingBar"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:numStars="5"
            android:layout_margin="@dimen/minimun_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/nameTextView"/>
        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distrito y Referencia"
            android:layout_margin="@dimen/minimun_margin"
            app:layout_constraintTop_toBottomOf="@id/nameTextView"
            app:layout_constraintStart_toEndOf="@id/vetANImageView"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageButton
            android:id="@+id/fordwardImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorIcons"
            app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>