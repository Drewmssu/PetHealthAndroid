<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.upc.pethealth.fragments.HistoryClinicFragment">
    <TextView
        android:id="@+id/tittleHistoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History Clinic"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/colorAccent"
        android:layout_margin="@dimen/big_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/clinicImageView"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="@id/tittleHistoryTextView"/>
    <TextView
        android:id="@+id/clinicNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryText"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_margin="@dimen/big_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clinicImageView"/>
    <TextView
        android:id="@+id/clinicDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/colorSecondaryText"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_margin="@dimen/big_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clinicNameTextView"/>

</android.support.constraint.ConstraintLayout>
